library(png)

# 이미지 크기 설정
width <- 400
height <- 200

# 배경색 설정 (투명하게 하려면 'transparent'로 설정)
background_color <- "#000000"  # 검은색 배경

# PNG 이미지 생성
aurora_png <- matrix(NA, height, width)

# 오로라 색상 설정
colors <- c("#FF0000", "#00FF00", "#0000FF")  # 빨강, 녹색, 파랑

# 각 픽셀에 오로라 색상 적용
for (i in 1:height) {
  for (j in 1:width) {
    color_index <- sample(1:3, 1)  # 랜덤 색상 선택
    aurora_png[i, j] <- colors[color_index]
  }
}

# PNG 파일로 내보내기
writePNG(aurora_png, "aurora.png", bg = background_color)